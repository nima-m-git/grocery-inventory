extends layout

block content
    h1= title

    hr
    form(method='POST' action='')
        .form-group
            label(for='name') Name:
            input#name.form-control(type='text' name='name' required='true' value=((category) ? category.name : ''))
        .form-group
            label(for='description') Description:
            input#description.form-control(type='textarea' name='description' value=((category) ? category.description : ''))
        button.btn.btn-primary(type='submit') Submit
        
    if errors 
        ul
            for error in errors
                li!= error.msg