extend layout

block content

    h2 Delete !{item.name}?
    p
        i !{item.description}

    form(method='POST' action='')
      .form-group
        input#itemid.form-control(type='hidden',name='itemid', required='true', value=item._id )
        
      button.btn.btn-primary(type='submit') Delete 
      = ' '
      a.btn.btn-primary(href=item.url) Back

    if err
      p !{err}