extends layout

block content

    h2 !{item.name}
    p
        i !{item.description}
        
    if item.image
        img(src=item.image.url alt='item image')

    hr
    p Price: $#{item.price}/lb
    p Stock: #{item.stock}
    p Category: 
        each cat, index in item.category 
            a(href=cat.url) !{cat.name}
            if index < item.category.length - 1
                | , 

    hr
    p
        a(href=item.url+'/delete') Delete
    p
        a(href=item.url+'/update') Update